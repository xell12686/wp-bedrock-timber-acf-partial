{# Section Props #}
{% set slides = section.slides %}
{% set background = section.background  %}



<section class="about">
    <div class="content grid grid-cols-12">
        
        <div class="img-col col-span-12 md:col-span-5 lg:col-span-6 md:order-last">
            {{ include('components/picture.twig', { 
                classes: 'background',
                image_url: background.src,
            }) }}               
        </div>        
        
        <div class="text-col bg-brand-yellow col-span-12 md:col-span-7 lg:col-span-6 grid place-items-center">
            <div class="about-slides">
                <div class="swiper-wrapper">
                        {% for slide in slides %}
                            <div class="swiper-slide slide {{ (loop.index == 1) ? 'active' : '' }}" data-slide="{{ loop.index - 1 }}">
                                <div class="generic-text">
                                    <div class="wrap max-w-lg ml-auto mr-0">
                                        <span class="pre-title">{{ slide.pre_title}}</span>
                                        <h2>{{ slide.title }}</h2>
                                        <div class="copy">
                                            {{ fn('nl2br', slide.copy )}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                   
                </div>
            </div>

            <div class="labelled-nav">
                <ul class="items generic-text">
                    {% for slide in slides %}
                        <li class="item {{ (loop.index == 1) ? 'active' : '' }}" data-slide="{{ loop.index - 1 }}">
                            <span class="pre-title">{{ slide.pre_title }}</span>
                        </li>
                    {% endfor %}                        
                </ul>
            </div>

        </div>

    </div>

</section>
