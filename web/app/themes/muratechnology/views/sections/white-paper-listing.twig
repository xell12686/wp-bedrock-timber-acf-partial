{# Section Props #}

{% set pre_title = section.pre_title  %}
{% set title = section.title %}

<section class="white-paper-listing">
    <div class="container">
        <div class="grid grid-cols-12 gap-4">
            <div class="col-span-12 lg:col-span-4 generic-text">
                <span class="pre-title">{{ pre_title }}</span>
                <h2 class="uppercase">{{ title }}</h2>
            </div>
            <div class="col-span-12 lg:col-span-8">
                <ul class="papers-list">
                    {% for post in latest_white_papers %}


                        <li class="item">
                            <div class="flex justify-between header" role="button" aria-pressed="false">
                                <div class="generic-text">
                                    <div class="flex gap-2">
                                        <span class="position-type">
                                            Subject Matter
                                        </span>
                                    </div>
                                    <h3>{{ post.title }}</h3>
                                    <span class="salary">
                                        {{ post.published_at|date("jS") }} of {{ post.published_at|date("F") }} {{ post.published_at|date("Y") }}
                                    </span>
                                </div>
                                <a class="icon" href="#" target="_blank">
                                </a>
                            </div>
                            <div class="body hidden">
                                <div class="description">
                                    {{ post.post_excerpt }}
                                </div>
                            </div>
                        </li>
                    
                    {% endfor %}

                </ul>
            </div>
        </div>
    </div>
</section>

