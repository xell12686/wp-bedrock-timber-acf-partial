{# Section Props #}
{% set heading = section.heading %}
{% set steps = section.steps %}

<section class="process-steps">
    <div class="heading-wrap">
        <h2 class="heading mb-9 md:-mb-10 uppercase">{{ heading }}</h2>
        <div class="swiper-nav xl:order-last">
            <button class="prev"><span class="sr-only">Previous Slide</span></button>
            <button class="next"><span class="sr-only">Next Slide</span></button>
        </div>
    </div>
    <div class="steps-horizontal hidden md:block">
        <div class="steps-swiper">
            <div class="swiper-wrapper items">
                {% for step in steps %}
                    <div class="item swiper-slide">
                        <div class="box">
                            <div class="inner">
                                <span class="number">{{ step.number }}</span>
                                <div class="wrap">
                                    <div class="img-wrap" style="width:{{ step.image_width }}%">
                                        {{ include('components/picture.twig', { 
                                            classes: 'object-contain object-center h-full', 
                                            max_small: true,
                                            image_url: step.image.url
                                        }) }}
                                    </div>
                                    <h3>{{ step.label }}</h3>
                                    <p>{{ step.copy }}</p>
                                </div>
                            </div>
                        </div>
                    </div>    
                {% endfor %}
            </div>
            <div class="swiper-scrollbar">
            </div>
        </div>
    </div>
    
    <div class="steps-accordion md:hidden">
        {% for step in steps %}
            <div class="item">
                <div class="box">
                    <div class="bar inner">
                        <span class="number">{{ step.number }}</span>
                        <h3>{{ step.label }}</h3>
                        <div class="icon">
                            <span></span>
                            <span></span>
                        </div>                    
                    </div>
                    <div class="content">
                        <div class="inner">
                            <div class="img-wrap" style="width:{{ step.image_width }}%">
                                {{ include('components/picture.twig', { 
                                    classes: 'object-contain object-center h-full', 
                                    max_small: true,
                                    image_url: step.image.url
                                }) }}
                            </div>
                            <p>{{ step.copy }}</p>
                        </div>
                    </div>
                </div>
            </div>    
        {% endfor %}
    </div> 

</section>